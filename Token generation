<div class="token-container">
    <h2>Token Generation</h2>
    <p>Enter your preferred token number</p>

    <input type="number" id="tokenInput" placeholder="Enter Token Number">

    <button class="btn" onclick="addToken()">Add Token</button>

    <div class="token-box" id="tokenNumber">--</div>
    <div class="message" id="message"></div>
</div>

<script>
let tokenList = [];   // Store existing tokens

function addToken() {

    let tokenValue = document.getElementById("tokenInput").value;
    let message = document.getElementById("message");

    if(tokenValue === ""){
        message.innerText = "Please enter a token number!";
        message.className = "message error";
        return;
    }

    if(tokenList.includes(tokenValue)){
        message.innerText = "Token already exists!";
        message.className = "message error";
    } 
    else{
        tokenList.push(tokenValue);
        document.getElementById("tokenNumber").innerText = tokenValue;
        message.innerText = "Token added successfully!";
        message.className = "message success";
    }

    document.getElementById("tokenInput").value = "";
}
</script>

